{
    "compilerOptions": {
        "incremental": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "lib",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "declaration": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
